<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rr.mc.fhhgb.at.epocgame.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/frogImage"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:layout_gravity="center_vertical|top"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/frog" />

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Spielen" />

        <Button
            android:id="@+id/buttonPractise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Trainieren" />

        <Button
            android:id="@+id/buttonHowto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Anleitung" />

        <Button
            android:id="@+id/buttonHighscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Highscore" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nicht verbunden"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/border_style"
                />

            <TextView
                android:id="@+id/batteryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akku: 0%"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:background="@drawable/border_style"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
